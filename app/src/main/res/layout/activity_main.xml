<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00a99f"
    tools:context="com.computer.nisa.tugasnisa.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/tebak_gambar"
            android:layout_gravity="center"
            android:layout_margin="12dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/terminal"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:src="@drawable/terminal" />


            <ImageView
                android:id="@+id/kacang"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:src="@drawable/kacang" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gigit"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/gigit"
                android:layout_weight="1"
                android:layout_margin="12dp"/>

            <ImageView
                android:id="@+id/kusam"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/kusam"
                android:layout_weight="1"
                android:layout_margin="12dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
